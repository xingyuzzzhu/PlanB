<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <RelativeLayout
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <TextView
            android:id="@+id/student_ongoing_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Zanyuan Yang"
            android:textColor="@color/black"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/student_ongoing_pnumber"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@+id/student_ongoing_name"
            android:layout_alignStart="@+id/student_ongoing_name"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:backgroundTint="#A8C6A0"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="phone number: 1111111111"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/student_ongoing_time"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/student_ongoing_ccode"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/student_ongoing_ccode"
            android:background="@drawable/shape"
            android:backgroundTint="#A8C6A0"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="30 min"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/student_ongoing_ccode"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_below="@+id/student_ongoing_pnumber"
            android:layout_alignStart="@+id/student_ongoing_pnumber"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape"
            android:backgroundTint="#A8C6A0"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="CSE 110"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>