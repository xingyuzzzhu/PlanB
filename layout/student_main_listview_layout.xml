<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <RelativeLayout
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="85dp">


        <ImageView
            android:id="@+id/tutor_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tutor_ranking_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/tutor_img"
            android:fontFamily="@font/poppins_semibold"
            android:text="Zanyuan Yang"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tutor_ranking_major"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="109dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape"
                android:backgroundTint="#A8C6A0"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:text="Computer Science"
                android:textColor="#ffffff"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tutor_ranking_grade"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape"
                android:backgroundTint="#A8C6A0"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:text="senior"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>