<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/tutor_reg_image"
        android:layout_width="126dp"
        android:layout_height="76dp"
        app:srcCompat="@drawable/choose2"
        android:contentDescription="@string/tutor_reg_img" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/welcome_to_plan_b"
        android:textColor="#CC000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/illustarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/want_to_be_a_tutor"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/illustarte2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/apply_now"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/tutor_email"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape"
        android:gravity="left|center_vertical"
        android:hint="@string/enter_your_email_address"
        android:inputType="textPassword|textEmailAddress"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tutor_password"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape"
        android:gravity="left|center_vertical"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tutor_prefer_name"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape"
        android:gravity="left|center_vertical"
        android:hint="@string/enter_your_preferred_name"
        android:inputType="textPassword|textEmailAddress"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tutor_major_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="60dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="Choose Your Major: "
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/tutor_major"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tutor_class_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="60dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="Choose Your Grade: "
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/tutor_grade"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <EditText
        android:id="@+id/tutor_phone_number"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape"
        android:gravity="left|center_vertical"
        android:hint="@string/enter_your_phone_number"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/tutor_register"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#A8C6A0"
        android:gravity="center_horizontal|center_vertical"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tutor_login_instructor"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/already_have_an_account"
            android:textSize="13sp" />

        <Button
            android:id="@+id/tutor_login_link"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:text="@string/login"
            android:textColor="#A8C6A0"
            android:background="@android:color/transparent"/>

    </LinearLayout>


</LinearLayout>