<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="clip_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/student_search_bar"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape1"
        android:drawableLeft="@drawable/searchicon"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Search tutor name or course"
        app:iconifiedByDefault="false"
        app:queryBackground="@color/green">

    </EditText>


<!--    <SearchView-->
<!--        android:id="@+id/searchView"-->
<!--        android:layout_width="320dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:background="@drawable/shape1"-->
<!--        android:queryHint="Search the course"-->
<!--        android:iconifiedByDefault="true"/>-->


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0" />


    <TextView
        android:id="@+id/Tutor_rank"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/tutor_ranking"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/tutor_listview"
        android:layout_width="match_parent"
        android:layout_height="553dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center|bottom">


        <ImageView
            android:id="@+id/student_main_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/studenthomebtn1" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/student_connection_btn"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            app:srcCompat="@drawable/studentconnectionbtn" />-->

        <ImageView
            android:id="@+id/student_connection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/studentconnectionbtn" />

        <ImageView
            android:id="@+id/student_submit_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/studentaddbtn" />

        <ImageView
            android:id="@+id/student_history_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/studenthistorybtn" />

        <ImageView
            android:id="@+id/student_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/studentprofilebtn" />

    </LinearLayout>

</LinearLayout>