<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="350dp"
            app:srcCompat="@drawable/poweroff" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ProfilePhoto"
        android:layout_width="500px"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:src="@drawable/jerry" />


    <TextView
        android:id="@+id/tutor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#000000"
        android:textSize="30sp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/year" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_weight="1"
            app:srcCompat="@drawable/major" />

<!--        <ImageView-->
<!--            android:id="@+id/star1"-->
<!--            android:layout_width="150px"-->
<!--            android:layout_height="150px"-->
<!--            android:layout_weight="1"-->
<!--            app:srcCompat="@drawable/star" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grade_standing"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/major"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textColor="#000000" />

<!--        <TextView-->
<!--            android:id="@+id/rating"-->
<!--            android:layout_width="131dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:fontFamily="@font/poppins_semibold"-->
<!--            android:textAppearance="@style/TextAppearance.AppCompat.Body2"-->
<!--            android:textColor="#000000" />-->

    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/rating"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="35dp"-->
<!--        android:fontFamily="@font/poppins_semibold"-->
<!--        android:textAppearance="@style/TextAppearance.AppCompat.Body2"-->
<!--        android:textColor="#000000"-->
<!--        android:textSize="18sp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_marginTop="13dp" >

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/search_spinner"
            android:layout_width="240dp"
            android:layout_marginLeft="35dp"
            android:layout_height="40dp"
            android:background="@drawable/shape1"
            app:hintText="Add preferred courses :D" />
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape1"
            android:id="@+id/confirm"
            android:text="Confirm"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

            <Button
                android:id="@+id/course_1"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/shape1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/close_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/ic_delete_course" />

        <Button
            android:id="@+id/course_2"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/shape1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/close_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/ic_delete_course" />

        <Button
            android:id="@+id/course_3"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/shape1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/close_icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/ic_delete_course" />

        <Button
            android:id="@+id/course_4"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:background="@drawable/shape1"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/close_icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/ic_delete_course" />

    </LinearLayout>


    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Contact"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/emailpic" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phoneImg"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/phonepic" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center|bottom">


        <ImageView
            android:id="@+id/student_main_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/homebar" />

        <ImageView
            android:id="@+id/student_connection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/connectionbar" />

        <ImageView
            android:id="@+id/student_history_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/historybar" />

        <ImageView
            android:id="@+id/student_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/profilebar1" />
    </LinearLayout>
</LinearLayout>